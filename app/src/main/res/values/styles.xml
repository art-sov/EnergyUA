<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--style for header of table stations-->
    <style name="Header">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!--style for fuel table-->
    <style name="FuelTable">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--style for block table-->
    <style name="Block">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">6dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
    </style>

    <!--style for unit (part of block)-->
    <style name="unit">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="compound_block">
        <item name="android:elevation">6dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
    </style>

    <!--style title for table in report-->
    <style name="title_table">
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/simple_margin</item>
        <item name="android:paddingTop">@dimen/simple_margin</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--style header in table-->
    <style name="table_header">
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_margin">1dp</item>
    </style>

        <!--style cell in table-->
    <style name="table_cell">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">#fff</item>
        <item name="android:layout_margin">1dp</item>

    </style>
</resources>
